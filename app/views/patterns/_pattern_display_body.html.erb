<% unless get_user.nil? %>
<table class="rating">
  <tr>
    <th>Usefulness Rating:</th>
    <th>Description Rating:</th>
  </tr>
  <tr>
    <td><%= ratings_for pattern, :dimension => :usefulness, :small => false %></td>
    <td><%= ratings_for pattern, :dimension => :description, :small => false %></td>
  </tr>
  <tr>
    <td>Your Former Rating: <%= ratings_for pattern, :force_static => true, :dimension => :usefulness, :small => true, :show_user_rating => true %></td>
    <td>Your Former Rating: <%= ratings_for pattern, :force_static => true, :dimension => :description, :small => true, :show_user_rating => true %></td>
  </tr>
</table>
<% else %>
<table class="rating">
  <tr>
    <th>Usefulness Rating:</th>
    <th>Description Rating:</th>
  </tr>
  <tr>
    <td><%= ratings_for pattern, :force_static => true, :dimension => :usefulness, :small => false %></td>
    <td><%= ratings_for pattern, :force_static => true, :dimension => :description, :small => false %></td>
  </tr>
</table>
<% end %>

