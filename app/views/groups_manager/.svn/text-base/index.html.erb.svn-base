<table>
  <tr>
    <th>User</th>
    <th>Add Group</th>
    <th>Remove Group</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%=h user.get_display_name %></td>
      <td>
        <% form_tag({:controller => "groups_manager", :action => "add_group_to_user", :user_id => user.id}) do %>
          <%= select_tag(:group_id, options_from_collection_for_select(@groups, 'id', 'name' )) %><br/>
          <%= submit_tag('Add Group') %>
        <% end %>
      </td>
      <td>
        <% form_tag({:controller => "groups_manager", :action => "remove_group_from_user", :user_id => user.id}) do %>
          <%= select_tag(:group_id, options_from_collection_for_select(user.groups.collect, 'id', 'name' )) %><br/>
          <%= submit_tag('Remove Group') %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>