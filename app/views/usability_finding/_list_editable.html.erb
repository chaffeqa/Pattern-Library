<% if pattern.usability_findings.count > 0 %>
  <div class="subsection">
    <h2>Usability Findings</h2>
    <% for finding in pattern.usability_findings %>
      <p><%=  format_output(finding.usability_finding) %>
        <% if can_edit_pattern(pattern) %><br/>
          [<%= link_to_remote 'Delete Finding',
            :url => {:controller => "usability_finding",
            :action => "destroy_finding",
            :id => pattern,
            :finding_id => finding},
            :method => :delete %>]
        <% end %>
      </p>
    <% end %>
  </div>
<% end %>